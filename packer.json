{
  "variables": {
    "ssh_user":        "{{env `DEFAULT_USER`}}",
    "source_name":     "{{env `SOURCE_IMAGE_NAME`}}",
    "build_name":      "{{env `BUILD_NAME`}}",
    "software_volume": "{{env `SOFTWARE_VOLUME`}}",
    "matlab_volume":   "{{env `MATLAB_VOLUME`}}"
  },
  "builders": [
    {
      "type":              "openstack",
      "communicator":      "ssh",
      "ssh_username":      "{{user `ssh_user`}}",
      "source_image_name": "{{user `source_name`}}",
      "image_name":        "{{user `build_name`}}",
      "instance_name":     "{{user `build_name`}}",
      "flavor":            "m3.small",
      "security_groups":  ["default","SSH"]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "openstack server add volume {{user `build_name`}} {{user `software_volume`}}"
    },
    {
      "type": "shell-local",
      "command": "openstack server add volume {{user `build_name`}} {{user `matlab_volume`}}"
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/master.yml",
      "user": "{{user `ssh_user`}}"
    },
    {
      "type": "shell-local",
      "command": "openstack server remove volume {{user `build_name`}} {{user `matlab_volume`}}"
    },
    {
      "type": "shell-local",
      "command": "openstack server remove volume {{user `build_name`}} {{user `software_volume`}}"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo --stdin --preserve-env bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "_comment1": " Make sure ansible provisioner 'user' is the same as ",
  "_comment2": " openstack builder 'ssh_username'. This prevents the ",
  "_comment3": " '~local_user' directory being created on the remote. "
}
