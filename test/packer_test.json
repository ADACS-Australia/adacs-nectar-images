{
  "variables": {
    "ssh_user": "",
    "os_source_id": "",
    "os_build_name": "",
    "os_matlab_volume": ""
  },
  "builders": [
    {
      "type": "openstack",
      "communicator": "ssh",
      "ssh_username": "{{user `ssh_user`}}",
      "source_image": "{{user `os_source_id`}}",
      "image_name": "{{user `os_build_name`}}",
      "flavor": "m3.small",
      "security_groups": [
        "default",
        "SSH"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "inspec",
      "inspec_env_vars": [
        "CHEF_LICENSE=accept"
      ],
      "profile": "inspec_test.rb"
    },
    {
      "type": "shell",
      "inline": [
                 "echo",
                 "echo",
                 "echo 'Tests completed successfully!'",
                 "echo 'Forcing packer to exit.'",
                 "echo",
                 "echo",
                 "exit 0"
                 ]
    }
  ]
}
